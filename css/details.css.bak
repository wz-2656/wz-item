*{margin:0;padding:0;}
.my_footer{width:100%}
.my_header{border:1px solid #ccc;}
.header{
	width:1100px;height:75px;
    margin:0 auto;
    
}
.hesder_top{
	width:1100px;
	border:1px solid #ccc;
}
.header_title{
	width:450px;height:70px;
	display:inline-block;
	background:url("../img/modules.png") no-repeat 10px -48px;
}
.user_login{
	float:right;margin:25px;
}
.user_login a{
	text-decoration:none;color:#000;
}
.shopping_cart{
	width:40px;height:40px;
	margin-top:10px;
	margin-left:25px;
	background:url("../img/modules.png") no-repeat -108px -152px;
	float:right;
}
.search_for{
	float:right;
	width:300px;height:40px;margin-top:15px;
	background: url("../img/modules.png") no-repeat 1px -1px;
	border-radius:1rem;
	outline:0;
}
.search_for input{
	width:250px;height:30px;
	margin-left:32px;
	margin-top:2px;
	border:0;
	outline:0;
}
/* 首页 */
.my_bg{
    width:1100px;height:80px;
    margin:0 auto;
	border-bottom:1px solid #000;
	display: left;
    
}
.my_bg a{
	text-decoration: none;
}
.my_bg1{
	height:80px;
	padding-top:25px;
	box-sizing: border-box;
} 
.my_bg1>a.my_bg2{
	color:#333333;
	font-size:20px;
}
.my_bg1>a.my_bg2:hover{
	text-decoration: underline;
}
.my_bg1>span{
	font-size:16px;
	color:#999999;
	margin-right:400px;	
}
.my_bg1 a.my_bg5{
	color:#999999;
	font-size:16px;
	padding-left:10px;
}
.my_bg1>a.my_bg5:hover{
	text-decoration: underline;
}


#scale{
	display: flex;
	width:1100px;
	margin:0 auto;
}
#box{
	position: relative;margin-right:50px;
}
#md{
	width:440px;height:440px;border:1px solid #000;position: relative;
}
#mask{
	position:absolute;width:150px;height:150px;top:0;left:0;z-index:1;
	background:rgba(0,0,0,.3); display: none
}
#mmask{
	position:absolute;width:440px;height:440px;top:0;left:0;opacity: 1 ;z-index:10
}

#sm img{
	width:76px;border:2px solid #ddd;margin:0 2px;
}
#sm img:hover{cursor: pointer}
#lg{
	position:absolute; top:0px;left:600px;border:1px solid #ff0;
	min-width:440px;height:440px;background: url(../img/1_lg.jpg) no-repeat;
	/*display: none;*/
}
.scale div.my_scale h2{color:#333333;font-size:24px;}
.scale div.my_scale p.p1{color:#999999;font-size:14px;line-height:28px;}
.scale div.my_scale p.p2{color:#d33a31;;font-size:30px;margin-right:5px;}
.my_scale1{display: flex;}
.my_scale1 ul{
	list-style: none;display: flex;
}
.my_scale2{display: flex; padding-right:20px;font-size:14px;margin-top:5px;}
.my_scale3{
	border:1px solid #f8e2e0;background-color:#fdf5f4;
	line-height: 30px;
	font-size:14px;
}
.my_scale1 ul.my_scale3 .my_ul1 span{
	border:1px solid #d33a31;
	color:#d33a31;
	margin:0px 10px 0px 15px;
}
.my_scale1 ul.my_scale3 .my_ul2{
	color:#d33a31;
	margin-right:15px;
	
}
.my_scale1 ul.my_scale3 .my_ul3 a{
	text-decoration: none;
	color:blue;
	margin-right:100px;
}
.my_scale1 ul.my_scale3 .my_ul4{margin-right:30px;}
.my_scale1 ul.my_scale2 li.my_ul5{margin-top:10px;}
.my_scale1 ul.my_scale2 li.my_ul6{
	border:1px solid #e5e5e5;padding:4px 16px 4px 16px;
	margin-top:5px;margin-right:15px;
}
.my_scale1 ul.my_scale2 button{
	padding:0px 6px 0px 6px;
	margin-right:8px;
	margin-left:8px;
}
.my_scale1 ul.my_scale2 li a{
	text-decoration: none;padding-right:10px;color:#333;
}
.my_scale1 ul.my_scale2 li.my_ul7,li.my_ul8{
	border:2px solid #d33a31;
	font-size:18px;
	line-height:45px;
	padding:0px 45px 0px 45px;
	margin-top:15px;
}
.my_scale1 ul.my_scale2 li.my_ul7{
	color:#d33a31;
}

.my_scale1 ul.my_scale2 li.my_ul8 a.first{
	background:url("../img/icon.jpg") no-repeat -51px -251px;
}
.my_scale1 ul.my_scale2 li.my_ul8 a.second{color:#fff;padding-left:5px;}
.my_scale1 ul.my_scale2 li.my_ul8{
	background-color:#c10d0c;
	margin-left:10px;
}

